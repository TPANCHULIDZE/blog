<h1>Sign In</h1>

<%=  form_with url: sign_in_path, local: true, data: { turbo: false } do |form| %>
  <div class="mb-3">
	<%= form.label :username %>
	<%= form.text_field :username, class: "form-control", placeholder: "hello" %>
  </div>

  <div class="mb-3">
	<%= form.label :password %>
	<%= form.password_field :password, class: "form-control", placeholder: "password" %>
  <%#= link_to "Forgot your password?", password_reset_path %>
  </div>

  <div>
		<%= form.submit "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>


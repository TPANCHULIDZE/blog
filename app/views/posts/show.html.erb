<h1 align="center"><%= Current.user.username %>'s posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">show post</th>
      <th scope="col">edit post</th>
      <th scope="col">delete post</th>
    </tr>
  </thead>
  <tbody>
  	<% @posts.each_with_index do |post, index| %> 
    <tr class="table-dark">
      <th scope="row"><%= index + 1 %></th>
      <td><%= link_to post.title, show_post_path(post), class: "btn btn-success" %> 
  	</td>
      <td><%= button_to "Edit", update_post_path(post), method: :get, class: "btn btn-primary"%> 
</td>
      <td><%= button_to "Delete", delete_post_path(post), method: :delete, class: "btn btn-danger"%></td>
    </tr>
    <% end %>	
  </tbody>
</table>


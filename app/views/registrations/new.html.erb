<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
              	<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h5>

              	<%= form_with model: @user, url: sign_up_path, class: "form-floating", local: true, data: { turbo: false }   do |form| %>
									<% if form.object.errors.any? %>
										<div class="alert alert-danger">
											<% form.object.errors.full_messages.each do |message| %>
												<div> <%= message %> </div>
											<% end %>
										</div>
									<% end %>
									<div class="d-flex align-items-center mb-3 pb-1">
										<% form.label :username, class: "form-control" %>
										<%= form.text_field :username, class: "form-control form-control-lg", placeholder: "hello" %>
									</div>

									<div class="d-flex align-items-center mb-3 pb-1">
										<% form.label :email, class: "form-control"%>
										<%= form.text_field :email, class: "form-control form-control-lg", placeholder: "hello@gmail.com" %>
									</div>

									<div class="d-flex align-items-center mb-3 pb-1">
										<% form.label :password, class: "form-control" %>
										<%= form.password_field :password, class: "form-control form-control-lg", placeholder: "password" %>
									</div>

									<div class="d-flex align-items-center mb-3 pb-1">
										<% form.label :password_confirmation, class: "form-control" %>
										<%= form.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "password_confirmation" %>
									</div>

									<div class="pt-1 mb-4">
										<%= form.submit "Sign Up", class: "btn btn-dark btn-lg btn-block" %>
									</div>
									
								<% end %>
               

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>